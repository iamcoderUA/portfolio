extends ../template
include ../mixins/mixins

block title 
    title Projects | Stanislav Mikhniev

block content
    .wrapper
        include ../modules/fixed-menu
        header.header
            +header("img/svg/sprite.min.svg#portfolio_header", "Станислав Михнев", "Личный сайт Front-end разработчика")
        main.content
            section.works
                svg.left-svg(viewbox="0 0 1000 175" preserveAspectRatio="none")
                    polygon(points="0,175 1000,175 1000,0" fill="#faf8f0")
                svg.right-svg.right-svg_position(viewbox="0 0 1000 175" preserveAspectRatio="none")
                    polygon(points="0,175 1000,175 1000,0" fill="#faf8f0")
                h1.works-title.title-main Мои работы
                    .works-title__image
                        svg.title-svg
                            use(xlink:href="img/svg/sprite.min.svg#works_header")
                .portfolio-body
                    .portfolio-slider
                        .portfolio-slider__text
                            ul.portfolio-slider__text-list
                                +portfolioText("LoftSchool Школа онлайн образования", "HTML5, CSS3, БЭМ", "img/svg/sprite.min.svg#link")
                                +portfolioText("Бургер лендинг", "HTML5, SASS, JavaScript, jQuery, AJAX, PHP", "img/svg/sprite.min.svg#link")
                                +portfolioText("Сайт портфолио", "pug, sass, JavaScript, node.js, VueJS, Gulp, WebPack", "img/svg/sprite.min.svg#link")
                        .portfolio-slider__head
                            .portfolio-slider__head-box
                                img.portfolio-slider__head-img(src="img/content/slide-1.png" alt="")
                        .portfolio-slider__slides
                            .slide-left
                                .slide-left__nav
                                    a.slide-left__link(href="#")
                                        svg.slide-left__svg
                                            use(xlink:href="img/svg/sprite.min.svg#portf_arrow_down")
                                ul.slide-left__list
                                    +portfolioLeftSlide("img/content/slide-2.jpg")
                                    +portfolioLeftSlide("img/content/slide-2.jpg")
                                    +portfolioLeftSlide("img/content/slide-2.jpg")
                            .slide-right
                                .slide-right__nav
                                    a.slide-right__link(href="#")
                                        svg.slide-right__svg
                                            use(xlink:href="img/svg/sprite.min.svg#portf_arrow_up")
                                ul.slide-right__list
                                    +portfolioRightSlide("img/content/slide-3.jpg")
                                    +portfolioRightSlide("img/content/slide-3.jpg")
                                    +portfolioRightSlide("img/content/slide-3.jpg")
            section.feed
                .feed-wrapper
                    h2.feed-title.title-main_absolute Что обо мне говорят
                        .feed-title__image
                            svg.title-svg
                                use(xlink:href="img/svg/sprite.min.svg#about_header")
                    ul.feed-info__list
                        li.feed-info__item
                            img.feed-info__icon(src="img/icons/quotes.png")
                            .feed-info__text Этот парень проходил обучение веб-разработке не где-то, а в Loftschool, 4 месяца только самых тяжелых испытаний и бессонных ночей!
                            .feed-info__description
                                .feed-info__photo(style="background-image: url(img/content/dima.png)")
                                .feed-info__person
                                    .feed-info__name Ковальчук Дмитрий
                                    .feed-info__occupation Основатель Loftschool
                        li.feed-info__item
                            img.feed-info__icon(src="img/icons/quotes.png")
                            .feed-info__text Этот код выдержит любые испытания. Только, пожалуйста, не занружайте сайт на слишком старых браузерах!
                            .feed-info__description
                                .feed-info__photo(style="background-image: url(img/content/vova.png)")
                                .feed-info__person
                                    .feed-info__name Сабанцев Владимир
                                    .feed-info__occupation Преподователь
                    .feed-form
                        .feed-form__blur
                            .feed-form__bg
                        .feed-form__wrapper
                            h2.feed-form__capt Связаться со мной
                            form.form(method="post")
                                .form-row
                                    input.form-row__input(type="text" placeholder="Логин" name="login")
                                .form-row
                                    input.form-row__input(type="password" placeholder="Пароль" name="pass")
                                .form-row
                                        input.form-row__textarea(type="textarea" placeholder="Ваше сообщение" name="message")
                                .form-but
                                    input.form-row__homelink(type="reset" value="Отправить")
                                    input.form-row__submit(type="submit" value="Очистить")
                    .back-arrow
                        a.next-arrow__but(href="")
                            svg.next-arrow__svg
                                use(xlink:href="img/svg/sprite.min.svg#arrow_down")
        include ../modules/footer
    script(src='js/projects.min.js')